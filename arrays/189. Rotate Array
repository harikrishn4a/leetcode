class Solution {
    public void rotate(int[] nums, int k) {

        // find final roatable number after full array rotations
        k %= nums.length;

        //rotate the array 1 step to the right, repeat it k times
        for (int i = 0; i < k; i++) {
            // store last elem
            previous = nums[nums.length - 1];
            for (int j = 0; j < nums.length; j++) {
                temp = nums[j];
                nums[j] = previous;
                // update previous to store replace elem to move it forward
                previous = temp;
            }
        }
        
    }
}
